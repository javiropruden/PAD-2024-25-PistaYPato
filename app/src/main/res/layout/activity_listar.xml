<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Parte superior - Icono de la app u otros iconos -->

    <!-- Parte central - Pantalla cambiante -->

    <!-- Parte inferior - Barra de navegaciÃ³n -->

    <!-- Contenedor central -->

    <EditText
        android:id="@+id/lugarListar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/nombre" />

    <EditText
        android:id="@+id/diaListar"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@+id/lugarListar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="538dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/nombre" />

    <Button
        android:id="@+id/anadir"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="740dp"
        android:layout_marginBottom="30dp"
        android:text="@string/selecionar" />

    <EditText
        android:id="@+id/horaListar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="474dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="text"
        android:text="Name" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="442dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="140dp" />

    <Button
        android:id="@+id/eliminar"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="740dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/anadir"
        android:text="Eliminar" />

