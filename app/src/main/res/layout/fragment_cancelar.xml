<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Parte superior - Icono de la app u otros iconos -->

    <!-- Parte central - Pantalla cambiante -->
    <FrameLayout
        android:id="@+id/middle_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="?attr/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="Información de la reserva"
                android:src="@drawable/informacion" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/informacion_reserva"
                android:textSize="20sp"
                android:fontFamily="@font/tipo1" />

            <TextView
                android:id="@+id/cancelar_nombre_equipo"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nombre del Equipo" />

            <TextView
                android:id="@+id/cancelar_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Dirección de la Reserva" />

            <TextView
                android:id="@+id/cancelar_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fecha de la Reserva" />

            <TextView
                android:id="@+id/cancelar_pista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pista de la Reserva" />

            <TextView
                android:id="@+id/cancelar_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hora de la Reserva" />

            <Button
                android:id="@+id/cancelar_btn_cancelar_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:backgroundTint="?attr/colorSecondaryVariant"
                android:fontFamily="@font/tipo1"
                android:text="@string/cancelar_button" />
        </LinearLayout>


    </FrameLayout>

    <!-- Parte inferior - Barra de navegación -->

</RelativeLayout>




