<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Parte superior -->

    <!-- Campo de texto Lugar -->
    <EditText
        android:id="@+id/lugarListar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="12sp"
    android:text="@string/nombre" />

    <!-- Campo de texto Día -->
    <EditText
        android:id="@+id/dia_sol"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@id/lugarListar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="12sp"
        android:text="@string/nombre" />

    <!-- RecyclerView para listar elementos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listarSol"
        android:layout_width="wrap_content"
        android:layout_height="215dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="140dp" />

    <!-- Botón de acción -->
    <Button
        android:id="@+id/anadir"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="462dp"
        android:layout_marginEnd="150dp"
        android:backgroundTint="?attr/colorSecondary"
        android:text="@string/selecionar" />

</RelativeLayout>
