<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Parte superior - Icono de la app u otros iconos -->

    <!-- Parte central - Pantalla cambiante -->

    <!-- Parte inferior - Barra de navegación -->

    <!-- Contenedor central -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Fila de nombre de usuario -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usernameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:text="Usuario:" />

            <EditText
                android:id="@+id/username"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Introduce tu usuario"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Espacio adicional -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Fila de contraseña -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:text="Contraseña: " />

            <EditText
                android:id="@+id/password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Introduce tu contraseña"
                android:inputType="textPassword"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Espacio adicional -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Fila de botones -->
        <LinearLayout
            android:layout_width="273dp"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión" />

            <View
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrarse" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
